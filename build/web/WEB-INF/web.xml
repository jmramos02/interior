<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>homeLogin</servlet-name>
        <servlet-class>com.ccs.homeLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logInServlet</servlet-name>
        <servlet-class>com.ccs.logInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logIn</servlet-name>
        <servlet-class>com.ccs.logIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SalesServlet</servlet-name>
        <servlet-class>com.ccs.SalesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchaseOrderServlet</servlet-name>
        <servlet-class>com.ccs.PurchaseOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SalesInvoiceServlet</servlet-name>
        <servlet-class>com.ccs.SalesInvoiceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PendingOrderServlet</servlet-name>
        <servlet-class>com.ccs.PendingOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InvoiceListServlet</servlet-name>
        <servlet-class>com.ccs.InvoiceListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homeLogin</servlet-name>
        <url-pattern>/homeLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logInServlet</servlet-name>
        <url-pattern>/logInServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logIn</servlet-name>
        <url-pattern>/logIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SalesServlet</servlet-name>
        <url-pattern>/sales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PurchaseOrderServlet</servlet-name>
        <url-pattern>/new-purchase-orders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SalesInvoiceServlet</servlet-name>
        <url-pattern>/new-sales-invoice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PendingOrderServlet</servlet-name>
        <url-pattern>/pending-orders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InvoiceListServlet</servlet-name>
        <url-pattern>/invoice-list</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
